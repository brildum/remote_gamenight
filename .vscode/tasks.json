{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "sorbet",
      "type": "shell",
      "command": "srb",
      "problemMatcher": {
        "owner": "rb",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^([^:]+):(\\d+): (.+) (https://srb.help/\\d+)$",
          "file": 1,
          "line": 2,
          "message": 3,
          "code": 4
        }
      },
      "presentation": {
        "reveal": "never",
        "clear": true
      }
    }
  ]
}
